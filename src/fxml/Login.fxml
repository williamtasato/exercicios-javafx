<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.LoginControlador" styleClass="login" hgap="15" vgap="15">

 <padding>
	<Insets left="40" right ="40" top="40" bottom="40"></Insets>
 </padding>
 
 <columnConstraints>
  <ColumnConstraints minWidth="60" prefWidth="60" halignment="RIGHT"/>
   <ColumnConstraints prefWidth="200" maxWidth="Infinity" hgrow="ALWAYS"/>
 </columnConstraints>
 	<Label text="Seja Bem Vindo" GridPane.columnIndex = "0" GridPane.rowIndex = "0" GridPane.columnSpan="2" GridPane.halignment="CENTER" styleClass="login-titulo">
 	<GridPane.margin>
 	<Insets bottom="20"  top="20"></Insets>
 	</GridPane.margin>
 	</Label>
 	<Label text="E-mail: " GridPane.columnIndex = "0" GridPane.rowIndex = "1" styleClass="login-form-label"></Label>
 	<TextField fx:id="campoEmail" GridPane.columnIndex = "1" GridPane.rowIndex = "1"></TextField>
  	<Label text="Senha: " GridPane.columnIndex = "0" GridPane.rowIndex = "2" styleClass="login-form-label"></Label>
  	<PasswordField fx:id="campoSenha" GridPane.columnIndex = "1" GridPane.rowIndex = "2"></PasswordField>
	<Button text= "Entrar" GridPane.columnIndex = "0" GridPane.rowIndex = "3" onAction="#entrar" GridPane.columnSpan="2" GridPane.halignment="CENTER" styleClass="login-form-botao">
	<GridPane.margin>
 	<Insets bottom="20"  top="20"></Insets>
 	</GridPane.margin>
	</Button>
</GridPane>

